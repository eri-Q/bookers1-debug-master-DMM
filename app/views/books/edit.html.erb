<h1>Editing Book</h1>

<form>
  <%= form_with model:@book, url: book_path(@book), method: :patch, local:true do |f| %>
    <h4>Title</h4>
    <div class="form-group">
    <%= f.text_field :title %>
    </div>
    <h4>Body</h4>
    <div class="form-group">
    <%= f.text_area :body %>
    </div>
    <div class="form-group">
    <%= f.submit "Update Book" %>
    </div>
  <% end %>
</form>

<%= link_to 'Show', @book, class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
